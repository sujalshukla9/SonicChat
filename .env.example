# =============================================================================
# SSCHATS - Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env in the root directory
# =============================================================================

# Client Configuration
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000
CLIENT_URL=http://localhost:80

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# Google Sheets
GSHEET_SPREADSHEET_ID=your-google-sheet-id

# Google Service Account (JSON on single line)
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
